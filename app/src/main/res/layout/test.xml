<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card-view="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e2e2e2"
        android:orientation="vertical">


        <android.support.v7.widget.CardView

            android:id="@+id/test1"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="10dp">


            <RelativeLayout
                android:id="@+id/card1"

                android:layout_width="fill_parent"
                android:layout_height="fill_parent">


                <ImageView
                    android:id="@+id/image1"

                    android:layout_width="80dp"
                    android:layout_height="61dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    card-view:srcCompat="@drawable/card_icon_virus" />

                <TextView
                    android:id="@+id/name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/image1"
                    android:text="@string/virus_scan"
                    android:textColor="@color/colorOrangePrimaryDark"
                    android:textSize="35px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/a1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name1"
                    android:layout_toRightOf="@+id/image1"
                    android:text="@string/recent_number_scan" />

                <TextView
                    android:id="@+id/b1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/a1"
                    android:layout_alignBottom="@+id/a1"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="49dp"
                    android:layout_marginRight="49dp"
                    android:text="0"
                    android:textColor="@color/colorAccent2"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lastscan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/a1"
                    android:layout_toEndOf="@+id/image1"
                    android:layout_toRightOf="@+id/image1"
                    android:text="@string/Last_Scan" />

                <TextView
                    android:id="@+id/scandate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/a1"
                    android:layout_marginLeft="11dp"
                    android:layout_marginStart="11dp"
                    android:layout_toEndOf="@+id/lastscan"
                    android:layout_toRightOf="@+id/lastscan"
                    android:text="2017,06,02"
                    android:textColor="@color/colorAccent2"
                    android:textStyle="bold" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView

            android:id="@+id/test2"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="10dp">


            <RelativeLayout
                android:id="@+id/card2"

                android:layout_width="fill_parent"
                android:layout_height="fill_parent">


                <ImageView
                    android:id="@+id/image2"

                    android:layout_width="80dp"
                    android:layout_height="61dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    card-view:srcCompat="@drawable/card_icon_anti" />

                <TextView
                    android:id="@+id/name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/image2"
                    android:text="@string/Anti_theft"
                    android:textColor="@color/colorOrangePrimaryDark"
                    android:textSize="35px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/a2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name2"
                    android:layout_toRightOf="@+id/image2"
                    android:text="@string/anti_desc" />

                <TextView
                    android:id="@+id/protectionofff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/alarmdetail"
                    android:layout_alignStart="@+id/alarmdetail"
                    android:layout_below="@+id/name2"
                    android:text="Off"
                    android:textColor="@color/colorAccent2"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/alarmon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/a2"
                    android:layout_toEndOf="@+id/image2"
                    android:layout_toRightOf="@+id/image2"
                    android:text="@string/Protection" />

                <TextView
                    android:id="@+id/protectionoff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/alarmon"
                    android:layout_alignBottom="@+id/alarmon"
                    android:layout_marginLeft="41dp"
                    android:layout_marginStart="41dp"
                    android:layout_toEndOf="@+id/name2"
                    android:layout_toRightOf="@+id/name2"
                    android:text="Off"
                    android:textColor="@color/colorAccent2"
                    android:textStyle="bold" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView

            android:id="@+id/test3"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="10dp">


            <RelativeLayout
                android:id="@+id/card3"

                android:layout_width="fill_parent"
                android:layout_height="fill_parent">


                <ImageView
                    android:id="@+id/image3"

                    android:layout_width="80dp"
                    android:layout_height="61dp"
                    android:layout_alignBottom="@+id/itemCardView2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    card-view:srcCompat="@drawable/card_icon_locker" />

                <TextView
                    android:id="@+id/name3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/image3"
                    android:text="@string/apps_lock"
                    android:textColor="@color/colorOrangePrimaryDark"
                    android:textSize="35px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/a3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name3"
                    android:layout_toRightOf="@+id/image3"
                    android:text="@string/applocker_desc" />

                <TextView
                    android:id="@+id/b3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/a3"
                    android:layout_toEndOf="@+id/image3"
                    android:layout_toRightOf="@+id/image3" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView

            android:id="@+id/test4"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="10dp">


            <RelativeLayout
                android:id="@+id/card4"

                android:layout_width="fill_parent"
                android:layout_height="fill_parent">


                <ImageView
                    android:id="@+id/image4"

                    android:layout_width="80dp"
                    android:layout_height="61dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    card-view:srcCompat="@drawable/card_icon_backupp" />

                <TextView
                    android:id="@+id/name4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/image4"
                    android:text="@string/wifisec_Home"
                    android:textColor="@color/colorOrangePrimaryDark"
                    android:textSize="35px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/a4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name4"
                    android:layout_toRightOf="@+id/image4"
                    android:text="@string/wifisec_Infor" />

                <TextView
                    android:id="@+id/b4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/a4"
                    android:layout_alignBottom="@+id/a4"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="14dp"
                    android:layout_marginRight="14dp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/e4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/a4"
                    android:layout_toEndOf="@+id/image4"
                    android:layout_toRightOf="@+id/image4"
                    android:text="@string/backup_location"
                    android:visibility="gone" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView

            android:id="@+id/test5"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="10dp">


            <RelativeLayout
                android:id="@+id/card5"

                android:layout_width="fill_parent"
                android:layout_height="fill_parent">


                <ImageView
                    android:id="@+id/image5"

                    android:layout_width="80dp"
                    android:layout_height="61dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    card-view:srcCompat="@drawable/card_icon_backupp" />

                <TextView
                    android:id="@+id/name5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/image5"
                    android:text="@string/callb_Home"
                    android:textColor="@color/colorOrangePrimaryDark"
                    android:textSize="35px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/a5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name5"
                    android:layout_toRightOf="@+id/image5"
                    android:text="@string/callb_Infor" />

                <TextView
                    android:id="@+id/b5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/a5"
                    android:layout_alignBottom="@+id/a5"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="14dp"
                    android:layout_marginRight="14dp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/e5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/a5"
                    android:layout_toEndOf="@+id/image5"
                    android:layout_toRightOf="@+id/image5"
                    android:text="@string/backup_location"
                    android:visibility="gone" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>