<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/mainEnd"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_weight="0.05"
        android:background="@color/mainEnd">

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="wrap_content"
            android:layout_height="200dip"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:id="@+id/arc_left"
                android:layout_width="wrap_content"
                android:layout_height="200dip"
                android:layout_centerVertical="true">

                <com.vinsasoft.security.widget.circleprogress.ArcProgress
                    android:id="@+id/arc_store"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    custom:arc_bottom_text_size="18dip"
                    custom:arc_progress="10"
                    custom:arc_stroke_width="8dip"
                    custom:arc_text_color="#ffffff"
                    custom:arc_text_size="32dip" />

                <TextView
                    android:id="@+id/capacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="55dip"
                    android:text="20/30"
                    android:textColor="@color/white"
                    android:textSize="12dip"
                    android:visibility="gone" />
            </RelativeLayout>

            <com.vinsasoft.security.widget.circleprogress.ArcProgress
                android:id="@+id/arc_process"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="25dip"
                android:layout_marginLeft="15dip"
                android:layout_toRightOf="@+id/arc_left"
                android:visibility="gone"
                custom:arc_bottom_text="RAM"
                custom:arc_bottom_text_size="14dip"
                custom:arc_progress="10"
                custom:arc_stroke_width="6dip"
                custom:arc_text_color="#ffffff"
                custom:arc_text_size="26dip" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#3762ad"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="dddd" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="@string/scanningText"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1">

        <include layout="@layout/virusscan" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/title_bg"
        android:visibility="gone">

        <TextView
            android:id="@+id/total"
            style="@style/wrapcontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="38sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgv_scanningicon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/scanning_icon" />

            <TextView
                android:id="@+id/tv_scansapp"
                style="@style/textview16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:text="Scanning"
                android:textColor="@color/white" />


        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="@+id/progressBar1"
            android:layout_marginTop="50dp"

            android:gravity="center"
            android:textColor="#0393de" />


        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView2"
            android:layout_marginTop="84dp"
            android:indeterminate="false"
            android:max="100"
            android:minHeight="20dp"
            android:minWidth="200dp"
            android:progress="1" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progressBar1"
            android:layout_centerInParent="@+id/progressBar1"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_centerInParent="@+id/progressBar1"
            android:layout_marginTop="20dp"
            android:text="0 threats found"
            android:textColor="#0393de" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relativeLayoutbase"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="5.0dip"
        android:layout_marginBottom="5.0dip"
        android:layout_marginTop="5.0dip"></RelativeLayout>

    <Button
        android:id="@+id/btnStop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#0393de"
        android:onClick="showAlert"
        android:text="@string/stop_scan"
        android:textColor="#FFFFFF" />


</LinearLayout>